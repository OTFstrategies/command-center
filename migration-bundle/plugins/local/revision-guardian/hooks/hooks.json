{
  "description": "Revision Guardian â€” Voorkomt en detecteert het revisie-faalpatroon bij LLM content generatie",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/hooks/feedback_detector.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/hooks/confrontation_detector.py",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/hooks/revision_checkpoint.py",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
