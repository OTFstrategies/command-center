{
  "github_owner": "OTFstrategies",
  "repos": {
    "public": [
      "command-center-v2",
      "veha-app",
      "command-center",
      "Proceshuis-VEHA",
      "gantt-dashboard",
      "design-os",
      "design-os1",
      "design-os-template",
      "claude-kennisbase"
    ],
    "private": [
      "Proceshuis-HSF",
      "Proceshuis-Werkplaats",
      "Proceshuis-Compilatie",
      "shadow-internal",
      "otf-strategies-site",
      "otf-ai-toolkit",
      "veha-hub-backend",
      "veha-design-system",
      "shadow-templates",
      "infrastructure-config",
      "client-portals",
      "otf-analytics",
      "backup-scripts"
    ],
    "default_branches": {
      "command-center-v2": "master",
      "veha-app": "master",
      "command-center": "main",
      "Proceshuis-VEHA": "main",
      "gantt-dashboard": "master",
      "design-os": "main",
      "design-os1": "master",
      "design-os-template": "master"
    }
  },
  "supabase_projects": {
    "veha-hub": {
      "id": "ikpmlhmbooaxfrlpzcfa",
      "risk_level": "high",
      "description": "Command Center + VEHA Hub"
    },
    "proceshuis-hsf": {
      "id": "qfhsctnvwsneaujcgpkp",
      "risk_level": "high",
      "description": "H&S Framework productie"
    },
    "proceshuis-werkplaats": {
      "id": "ielwgkjacynajoudwaqc",
      "risk_level": "medium",
      "description": "Werkplaats development"
    },
    "veha-app": {
      "id": "placeholder-check-supabase",
      "risk_level": "medium",
      "description": "VEHA App"
    },
    "gantt-dashboard": {
      "id": "placeholder-check-supabase",
      "risk_level": "low",
      "description": "Gantt Dashboard"
    }
  },
  "tools": {
    "gitleaks": {
      "enabled": true,
      "install_command": "scoop install gitleaks",
      "config_path": "config/.gitleaks.toml"
    },
    "ggshield": {
      "enabled": true,
      "install_command": "pip install ggshield",
      "requires_api_key": true
    },
    "snyk": {
      "enabled": true,
      "install_command": "npm install -g snyk",
      "requires_api_key": true
    },
    "semgrep": {
      "enabled": true,
      "install_command": "pip install semgrep",
      "config_path": "config/semgrep-rules.yml"
    },
    "trivy": {
      "enabled": true,
      "install_command": "scoop install trivy",
      "config_path": "config/trivy.yaml"
    }
  },
  "auto_fix": {
    "allowed": ["npm_audit_fix", "gitignore_update", "branch_protection"],
    "forbidden": ["secret_rotation", "major_upgrades", "rls_changes", "code_logic"]
  },
  "notifications": {
    "critical": "always",
    "high": "always",
    "medium": "summary",
    "low": "silent"
  }
}
