{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["timestamp", "score", "summary", "layers"],
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "scope": { "type": "string", "enum": ["project", "all"] },
    "project": { "type": "string" },
    "summary": {
      "type": "object",
      "properties": {
        "critical": { "type": "integer" },
        "high": { "type": "integer" },
        "medium": { "type": "integer" },
        "low": { "type": "integer" },
        "total": { "type": "integer" }
      }
    },
    "layers": {
      "type": "object",
      "properties": {
        "secrets": { "type": "array" },
        "dependencies": { "type": "array" },
        "code": { "type": "array" },
        "containers": { "type": "array" },
        "database": { "type": "array" },
        "access": { "type": "array" },
        "storage": { "type": "array" }
      }
    }
  }
}
