[
  {
    "name": "pre-commit-secrets",
    "description": "Scan voor secrets voordat git commit wordt uitgevoerd",
    "event": "PreToolUse",
    "match": {
      "tool": "Bash",
      "command_pattern": "git commit"
    },
    "script": "hooks/pre-commit-secrets.py",
    "timeout": 30000
  },
  {
    "name": "check-sensitive-file",
    "description": "Blokkeer schrijven naar gevoelige bestanden",
    "event": "PreToolUse",
    "match": {
      "tool": ["Write", "Edit"]
    },
    "script": "hooks/check-sensitive-file.py",
    "timeout": 10000
  },
  {
    "name": "session-start-security",
    "description": "Toon security status bij sessie start",
    "event": "UserPromptSubmit",
    "script": "hooks/session-start-check.py",
    "timeout": 15000
  }
]
